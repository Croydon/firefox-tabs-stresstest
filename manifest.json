{
    "name": "Firefox Tabs Stresstest",
    "description": "Opens a hell lot of tabs.",
    "version": "0.3.0",
    "manifest_version": 2,
    "author": "Michael 'Croydon' Keck",
    "developer":
    {
        "name": "Michael 'Croydon' Keck"
    },
    "homepage_url": "https://github.com/Croydon/firefox-tabs-stresstest",
    "permissions": ["tabs", "activeTab"],
    "incognito": "spanning",
    "background":
    {
        "scripts":
        [
            "src/index.js"
        ]
    },
    "browser_action":
    {
        "default_icon":
        {
            "16": "data/icon.png",
            "48": "data/icon.png",
            "96": "data/icon.png",
            "128": "data/icon.png"
        },
        "default_title": "Open lot of tabs",
        "default_area": "navbar"
    },
    "icons":
    {
        "16": "data/icon.png",
        "48": "data/icon.png",
        "96": "data/icon.png",
        "128": "data/icon.png"
    },
    "browser_specific_settings":
    {
        "gecko":
        {
            "id": "tabsstresstest@go-dev.de",
            "strict_min_version": "102.0"
        }
    }
}
